---
const { title, website, icon } = Astro.props;
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon'
---

<p>
  <a href={`${website}`} target="_blank" rel="noopener noreferrer" title={title}>
    <Icon name={icon} width="24px" height="24px" />
    </svg>
  </a>
</p>

<style>
    a {
        opacity: 1;
        background-color: transparent;
        text-decoration: none;
        color: var(--socialunhighlighted);

        display: inline-block;
        transition: 0.3s;

        width: 1em;
    }

    a:hover {
        color: rgb(136, 127, 112);
        transform: scale(1.3);
    }

    a:hover:after {
        transform: scale(1);
    }

    @media (max-width: 300px) {
        .a {
            transform: scale(0.5);
        }
    }
</style>
